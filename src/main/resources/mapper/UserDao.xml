<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 设置为IUserDao接口方法提供sql语句配置 -->
<mapper namespace="com.testyle.dao.IUserDao">
    <resultMap id="listUser" type="User">
        <id column="userID" property="userID"></id>
        <result property="userName" column="userName"></result>
        <result property="userRealName" column="userRealName"></result>
        <result property="userType" column="userType"></result>
    </resultMap>
    <select id="selectUser" resultType="User" parameterType="long">
        SELECT *
        FROM user
        WHERE userID = #{userID}
    </select>

    <select id="checkUser" resultType="long" parameterType="User">
        select IFNULL(max(userID),0) as userID FROM user
        <where>
            <if test="userName!=null">
                and userName=#{userName}
            </if>
            <if test="userPassword!=null">
                and userPassword=#{userPassword}
            </if>
        </where>
    </select>
    <insert id="addUser" parameterType="User">
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="userID">
            SELECT @@IDENTITY
        </selectKey>
        INSERT into user (userName,userPassword,userRealName,addtime) values (#{userName},
        #{userPassword},#{userRealName},#{addtime})
    </insert>

    <delete id="deleteUser" parameterType="long" statementType="PREPARED">
        delete from user
        <where>
            <if test="userID!=-1">
                and userID=#{userID}
            </if>
        </where>
    </delete>

    <select id="select" resultMap="listUser" parameterType="User">
        select * from user
        <where>
            <if test="userID!=-1">
                and userID=#{userID}
            </if>
            <if test="userName!=null">
                and userName=#{userName}
            </if>
            <if test="userMobile!=null">
                and userMobile=#{userMobile}
            </if>
        </where>
    </select>
    <update id="update" parameterType="User">
        update user
        set userName     = #{userName},
            userPassword = #{userPassword},
            userRealName = #{userRealName},
            addtime      = #{addtime}
        where userID = #{userID}
    </update>
</mapper>