<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testyle.dao.ITestDao">
    <resultMap id="listTest" type="Test">
        <id column="testID" property="testID"></id>
        <result property="testNumber" column="testNumber"></result>
        <result property="soluID" column="soluID"></result>
        <result property="soluName" column="soluName"></result>
        <result property="planDanID" column="planDanID"></result>
        <result property="planDanName" column="planDanName"></result>
        <result property="builderID" column="builderID"></result>
        <result property="userName" column="userName"></result>
        <result property="status" column="status"></result>
        <result property="addtime" column="addtime"></result>
    </resultMap>

    <select id="selectList" resultMap="listTest" parameterType="List">
        select a.testID,a.testNumber,a.soluID,b.soluName,a.planDanID,c.planDanName,a.builderID,d.userName from test
        a,solution
        b,planDan c,user d
        where a.soluID=b.soluID and a.planDanID=c.planDanID and a.builderID=d.userID and a.testID in
        <foreach collection="list" item="testID" open="(" close=")" separator=",">
            #{testID}
        </foreach>
    </select>
    <select id="select" resultMap="listTest" parameterType="Test">
        select a.testID,a.testNumber,a.soluID,b.soluName,a.planDanID,c.planDanName,a.builderID,d.userName from test
        a,solution
        b,palnDan c,user d
        <where>
            a.soluID=b.soluID and a.planDanID=c.planDanID and a.builderID=d.userID
            <if test="testID!=-1">
                and testID=#{testID}
            </if>
            <if test="testNumber!=null">
                and testNumber=#{testNumber}
            </if>
            <if test="soluID!=-1">
                and soluID=#{soluID}
            </if>
            <if test="planDanID!=-1">
                and planDanID=#{planDanID}
            </if>
            <if test="builderID!=-1">
                and builderID=#{builderID}
            </if>
            <if test="status!=-1">
                and status=#{status}
            </if>
        </where>
    </select>
    <insert id="insert" parameterType="Test">
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="testID">
            SELECT @@IDENTITY
        </selectKey>
        INSERT into test (testNumber,soluID,planDanID,builderID,status,addtime) values (#{testNumber},#{soluID},
        #{planDanID},#{builderID},#{status},#{addtime})
    </insert>
    <delete id="delete" parameterType="long">
        delete
        from test
        where testID = #{testID}
    </delete>

    <update id="update" parameterType="Test">
        update test
        set testNumber = #{testNumber},
            soluID     = #{soluID},
            planDanID  = #{planDanID},
            builderID  = #{builderID},
            status     = #{status},
            addtime    = #{addtime}
        where testID = #{testID}
    </update>

</mapper>