<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.testyle.dao.ITestDao">
    <resultMap id="listTest" type="Test">
        <id column="testID" property="testID"></id>
        <result column="testName" property="testName"></result>
        <result property="soluID" column="soluID"></result>
        <result property="soluName" column="soluName"></result>
        <result property="devID" column="devID"></result>
        <result property="devName" column="devName"></result>
        <result property="leaderID" column="leaderID"></result>
        <result property="userName" column="userName"></result>
    </resultMap>

    <select id="selectList" resultMap="listTest" parameterType="List">
        select a.testID,a.testName,a.soluID,b.soluName,a.devID,c.devName,a.leaderID,d.userName from test a,solution
        b,device c,user d
        where a.soluID=b.soluID and a.devID=c.devID and a.leaderID=d.userID and a.testID in
        <foreach collection="list" item="testID" open="(" close=")" separator=",">
            #{testID}
        </foreach>
    </select>
    <select id="select" resultMap="listTest" parameterType="Test">
        select a.testID,a.testName,a.soluID,b.soluName,a.devID,c.devName,a.leaderID,d.userName from test a,solution
        b,device c,user d
        <where>
            a.soluID=b.soluID and a.devID=c.devID and a.leaderID=d.userID
            <if test="testID!=-1">
                and testID=#{testID}
            </if>
            <if test="testName!=null">
                and testName=#{testName}
            </if>
            <if test="soluID!=-1">
                and soluID=#{soluID}
            </if>
            <if test="devID!=-1">
                and devID=#{devID}
            </if>
            <if test="leaderID!=-1">
                and leaderID=#{leaderID}
            </if>
        </where>
    </select>
    <insert id="insert" parameterType="Test">
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="testID">
            SELECT @@IDENTITY
        </selectKey>
        INSERT into test (testName,soluID,devID,leaderID,addtime) values (#{testName},#{soluID},
        #{devID},#{leaderID},#{addtime})
    </insert>
    <delete id="delete" parameterType="long">
        delete
        from test
        where testID = #{testID}
    </delete>

    <update id="update" parameterType="Test">
        update test
        set testName = #{testName},
            soluID   = #{soluID},
            devID    = #{devID},
            leaderID = #{leaderID},
            addtime  = #{addtime}
        where testID = #{testID}
    </update>

</mapper>